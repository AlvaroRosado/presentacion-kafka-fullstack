{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-base-200 p-4 font-mono">

        <div class="navbar bg-base-100 rounded-box shadow-lg mb-4">
            <div class="flex-1">
                <a class="btn btn-ghost normal-case text-xl text-primary">
                    <span class="loading loading-ring loading-md"></span>
                    Kafka Live Stream
                </a>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-4">

            <div class="flex-grow">
                <div {{ turbo_stream_listen('wikipedia_changes') }}></div>

                <div id="wikimedia-stream" class="flex flex-col gap-3 h-[80vh] overflow-y-auto pr-2 pb-10">
                    <div class="text-center opacity-50 mt-10">Esperando eventos de Kafka...</div>
                </div>
            </div>

            <div class="w-full lg:w-80 hidden lg:block">
                <div class="card bg-base-100 shadow-xl">
                    <div class="card-body">
                        <h2 class="card-title text-sm opacity-70">INFRAESTRUCTURA</h2>
                        <ul class="steps steps-vertical text-sm">
                            <li class="step step-primary">Wikimedia SSE</li>
                            <li class="step step-primary">PHP Producer</li>
                            <li class="step step-primary">Kafka Cluster</li>
                            <li class="step step-primary">Php Consumer</li>
                            <li class="step step-secondary">Mercure Hub</li>
                            <li class="step step-secondary">Browser</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
